<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_home_height"
        android:background="@color/tab_home_background"
        app:tabIndicatorColor="@color/tab_home_indicator"
        app:tabIndicatorHeight="@dimen/tab_home_divide"
        app:tabMode="fixed" />

    <FrameLayout
        android:id="@+id/frTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/frame_home_background"></FrameLayout>
</LinearLayout>